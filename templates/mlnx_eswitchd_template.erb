[DEFAULT]
default_log_levels="eswitchd=DEBUG"
verbose=False
debug=False
log_file=/var/log/eswitchd.log
[DAEMON]
<% case node['cookbook-openstack-mellanox']['network_mod'] %>
<% when /eth/ %>
fabrics=default:<%= node['cookbook-openstack-mellanox']['neutron_port'] %>
<% when /ib/ %>
fabrics=default:<%= node['cookbook-openstack-mellanox']['neutron_port_lb'] %>
<% end %>
default_timeout=4000
socket_os_port=60001
socket_of_port=60000
[OF]
of_agent_mappings=default:127.0.0.1:auto
start_of_agent=no
